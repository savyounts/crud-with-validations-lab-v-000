<% if !@song.title %>
  <h2>Create a song</h2>
<% else %>
  <h2> Update @song.title </h2>
<% end %>

<% if @song.errors.any? %>
  <div>
    <ul>
      <% @song.errors.full_message.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
  Title: <%= f.text_field :title %>
  Released? <%= f.text_field :released %>
  Release Year: <%= f.text_field :release_year %>
  Artist: <%= f.text_field :artist_name %>
  Genre:<%= f.text_field :genre %>
  <%= f.submit %>
<% end %>
